.game
  width 100%
  max-width min(90vw, 90vh)
  margin 0 auto
  border 1px solid black
  *
    box-sizing border-box


.row
  display flex
  width 100%

.cell
  flex 0 0 25%
  padding 0.1em
  &__wrapper
    position relative
    padding-bottom 100%
    height 0
    display flex
    align-items center


  &__item
    reset-button ()
    trbl ()
    position absolute
    box-sizing border-box
    background gold
    font-size 3em
    width 100%

  &__zero
    opacity 0
