.ff
  width 22.18rem
  // pixelperfect './ff.png'

.title
  font-size 1.875em

.form
  margin-top 1em

.input
  outline none
  display block
  border none
  border-bottom 1px solid lightgrey
  width 100%
  padding 1.5em 0 0.75em
  &:focus
    border-bottom 1px solid $mainColor

.btn
  reset-button ()
  background $mainColor
  &:hover:not([disabled])
    filter brightness(1.1)
  &:active:not([disabled])
    filter brightness(0.9)

  padding 1em 2em
  text-transform uppercase
  font-size 1.125em
  border-radius 0.44em
  &__wrapper
    // width 21em
    margin-top 2.5em
